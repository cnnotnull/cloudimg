# 应用配置
APP_NAME=Web图床系统
APP_VERSION=1.0.0
API_V1_STR=/api/v1

# 服务器配置
HOST=0.0.0.0
PORT=8000
DEBUG=True

# 数据库配置
DATABASE_URL=sqlite+aiosqlite:///./db/database.db

# 文件上传配置
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=./uploads

# 缩略图配置
THUMBNAIL_WIDTH=300
THUMBNAIL_HEIGHT=300
THUMBNAIL_SAVE_PATH=./thumbnails
THUMBNAIL_URL_PREFIX=http://localhost:8000

# 安全配置
SECRET_KEY=your-secret-key-here-change-in-production

# Session配置
SESSION_EXPIRE_MINUTES=30
SESSION_REMEMBER_DAYS=7

# 管理员账号配置（可通过.env自定义）
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin
